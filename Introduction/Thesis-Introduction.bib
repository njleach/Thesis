	author = {D'Ippoliti, Daniela and Michelozzi, Paola and Marino, Claudia and De'Donato, Francesca and Menne, Bettina and Katsouyanni, Klea and Kirchmayer, Ursula and Analitis, Antonis and Medina-Ramón, Mercedes and Paldy, Anna and Atkinson, Richard and Kovats, Sari and Bisanti, Luigi and Schneider, Alexandra and Lefranc, Agnès and Iñiguez, Carmen and Perucci, Carlo A.},
	year = {2010},
	file = {Attachment:/home/leachl/Zotero/storage/A7B5GVBX/D'Ippoliti et al. - 2010 - The impact of heat waves on mortality in 9 European cities Results from the EuroHEAT project.pdf:application/pdf},
}

@article{davis_arabica-like_2021,
	title = {Arabica-like flavour in a heat-tolerant wild coffee species},
