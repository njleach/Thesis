	journal = {Nature Climate Change},
	author = {Stuart-Smith, Rupert F. and Otto, Friederike E. L. and Saad, Aisha I. and Lisi, Gaia and Minnerop, Petra and Lauta, Kristian Cedervall and van Zwieten, Kristin and Wetzer, Thom},
