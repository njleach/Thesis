	note = {Publisher: John Wiley \& Sons, Ltd},
	keywords = {doi:10.1029/2006GL029068, eat waves, feedbacks, http://dx.doi.org/10.1029/2006GL029068, summer},
	file = {Full Text:/home/leachl/Zotero/storage/6GHLQTNP/Fischer et al. - 2007 - Contribution of land-atmosphere coupling to recent.pdf:application/pdf},
}

@article{frame_economic_2020,
