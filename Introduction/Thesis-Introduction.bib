	author = {Hoerling, Martin and Kumar, Arun and Dole, Randall and Nielsen-Gammon, John W. and Eischeid, Jon and Perlwitz, Judith and Quan, Xiao Wei and Zhang, Tao and Pegion, Philip and Chen, Mingyue},
